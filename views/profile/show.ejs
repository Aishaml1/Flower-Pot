<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/profile.css">
<%- include('../partials/nav') %>

<% if (profile.avatar) { %>
<div style='margin-left:40rem;'>
<img class="profile-avatar"
style='border-radius:50%' height='180px;'src="<%= profile.avatar %>" 
   alt="<%= profile.name %> avatar"
      >
    </div>
  <% } %>
  <h1 style='margin-left:40rem;'>It's <%= isSelf ? "you" : profile.name %>!</h1>
  <% if (isSelf)  {%> 
    <section style='margin-left:40rem;'>
    <h2> List of Teas You Want to Try ! </h2>
    <form action="/profile/<%= profile._id%>/tea" method="POST">
          <label for="tea">Add A Tea To Your List</label>
             <select id="tea" name="tea">
            <option value="Chamomile">Chamomile</option>
            <option value="White">White</option>
            <option value="Peppermint">Peppermint</option>
            <option value="Green">Green Tea</option>
            <option value="Green">Green </option>
            <option value="">Rose</option>
          <option value="Butterfly Pea">Butterfly Pea</option>
          <option value="Lavender">Lavender</option>
          <option value="Hibiscus">Hibiscus</option>
          </select>
               <button type='submit'>ADD</button>
        </form>

        <% if (profile.tea.length)  {%>
            <h2>
              <%= isSelf ? "You have" : `${profile.name} has` %> tea! Here they are!
            </h2>
            
            <% profile.tea.forEach(t => { %>
              <h3>
                <%= t.tea %> 
              </h3>
        <form action="/profile/tea/<%= t._id %>?_method=DELETE" method="POST">
                <button type="submit"><img style='height:2rem;' src="https://img.icons8.com/ios-filled/50/000000/trash.png"/></button>
                  </form>
            <% }) %>
          <% } else { %>
            <h2>
              <%= isSelf ? "You don't" : `${profile.name} doesn't` %> have a tea List.
            </h2> 
          <% } %> 
        
        </section>


        <% } %>
  <%- include('../partials/footer') %>