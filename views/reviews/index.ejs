<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/reviews.css">
<%- include('../partials/nav') %>

<section>

<a href = '/reviews/new' > Add a review </a>
<h1> All Reviews </h1>
<% reviews.forEach(function(r){%>
<hr>
 <ul>
<li><img id="avImg" src="<%=r.owner.avatar %>"></li>
<li id="ownerName"><%= r.owner.name %></li>
<li>What Tea Have You Tried? 
<%= r.selectTea %> </li>
 <li>Rate:
     <%= r.rate %></li>
 <li>Other: 
<li>  <%= r.other %> </li>
<li id='dateCreated'><%= r.createdAt %> </li>
<% if (r.owner.equals(user?.profile._id)) { %>
<li><a href="/reviews/<%= r._id %>">Update Review</a></li>
<%}%>
<%})%>


</section>




